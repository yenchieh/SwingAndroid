<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/weatherHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:gravity="center"
        android:theme="@style/AppTheme.AppBarOverlay">


        <TextView
            fontPath="Avenir_bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/weather_title"
            android:textColor="@color/orange"
            android:textSize="@dimen/toolbar_text_size" />


    </android.support.design.widget.AppBarLayout>

    <com.example.yen_chieh.testandroid.CircleProgressBar
        android:layout_below="@+id/weatherHeader"
        android:id="@+id/custom_progressBar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/page_margin_top"
        />


    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/city_overall" />

</RelativeLayout>